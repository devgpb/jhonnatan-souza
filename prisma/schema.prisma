generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model brokers {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(100)
  creci      String       @unique @db.VarChar(50)
  created_at DateTime?    @default(now()) @db.Timestamptz(6)
  company    String?      @db.VarChar
  phone      String?      @db.VarChar
  email      String?      @db.VarChar
  avatar     String?
  properties properties[]
}

model properties {
  id          Int       @id @default(autoincrement())
  location    String    @db.VarChar(255)
  price       Decimal   @db.Decimal(12, 2)
  broker_id   Int?
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  title       String    @db.VarChar
  area        Decimal   @default(0) @db.Decimal(10, 2)
  bedrooms    Int       @default(0)
  suites      Int       @default(0)
  bathrooms   Int       @default(0)
  parking     Int       @default(0)
  year        Int?
  iptu        Decimal?  @db.Decimal(10, 2)
  sold        Boolean   @default(false)
  description String?
  amenities   String?
  images      String[]
  updated_at  DateTime? @default(now()) @db.Timestamptz(6)
  status      String    @default("dispon√≠vel")
  brokers     brokers?  @relation(fields: [broker_id], references: [id], onUpdate: NoAction)
}

model users {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}
